@model List<AcunMedyaPortfolyo.Models.Tbl_Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Bu Bir Slider Sayfasıdır</h2>

<div class="Container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SliderID</th>
                <th>NameSurname</th>
                <th>Description</th>
                <th>ImageUrl</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SliderID</td>
                <td>@item.NameSurname</td>
                <td>@item.Description</td>
                <td>@item.ImageUrl</td>
                <td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-danger">Güncelle</a></td>
                <td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-dark">Sil</a></td>

            </tr>
        }
    </table>
</div>
<a href="/Slider/CreateSlider/" class="btn btn-danger">Oluştur</a>