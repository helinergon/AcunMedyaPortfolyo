@model AcunMedyaPortfolyo.Models.Tbl_Project
@{
    ViewBag.Title = "UpdateProject";
}

<h2>Proje Güncelleme Sayfası</h2>


<form method="post">
    @Html.HiddenFor(x => x.ProjectID)
    <br />
    <label>Proje Adı</label>
    @Html.TextBoxFor(x => x.ProjectName, new { @class = "form-control" })
    <br />
    <label>Proje Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Proje Linki</label>
    @Html.TextBoxFor(x => x.ProjectLink, new { @class = "form-control" })
    <br />
    <label>Resim1</label>
    @Html.TextBoxFor(x => x.Image1, new { @class = "form-control" })
    <br />
    <label>Resim2</label>
    @Html.TextBoxFor(x => x.Image2, new { @class = "form-control" })
    <br />
    <label>Resim3</label>
    @Html.TextBoxFor(x => x.Image3, new { @class = "form-control" })
    <br />
    <label>Kategori ID</label>
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    <button>Güncelle</button>
</form>