@model List<AcunMedyaPortfolyo.Models.Tbl_Message>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Bu Bir Message Sayfasıdır</h2>

<div class="Container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>MessageID</th>
                <th>NameSurname</th>
                <th>Mail</th>
                <th>Subject</th>
                <th>MessageContent</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MessageID</td>
                <td>@item.NameSurname</td>
                <td>@item.Mail</td>
                <td>@item.Subject</td>
                <td>@item.MessageContent</td>
                <td><a href="#" class="btn btn-danger">Güncelle</a></td>
                <td><a href="/Message/DeleteMessage/@item.MessageID" class="btn btn-dark">Sil</a></td>

            </tr>
        }

    </table>
</div>
<a href="/Message/CreateMessage/" class="btn btn-danger">Oluştur</a>